# Laravel Cloud Production Environment
# Set these variables in Laravel Cloud dashboard

APP_NAME="Sydney Markets B2B"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Australia/Sydney
APP_URL=https://your-app.laravel.cloud

# Database (provided by Laravel Cloud)
DB_CONNECTION=mysql

# Queue & Cache
QUEUE_CONNECTION=database
CACHE_STORE=database
SESSION_DRIVER=database

# Broadcasting (disabled - Reverb is dev-only)
BROADCAST_CONNECTION=log

# Mail
MAIL_MAILER=log

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Filesystem
FILESYSTEM_DISK=local

# NOTE: Octane and Reverb are in require-dev and won't be installed in production
# They are disabled via composer.json "dont-discover" setting
