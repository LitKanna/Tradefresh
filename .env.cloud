# Laravel Cloud Production Environment
# Copy this to .env on Laravel Cloud or set these variables in Cloud dashboard

APP_NAME="Sydney Markets B2B"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Australia/Sydney
APP_URL=https://your-app.laravel.cloud

# IMPORTANT: Disable Octane for Laravel Cloud
# Laravel Cloud uses FPM by default - Octane causes permission errors
OCTANE_SERVER=

# Database (will be provided by Laravel Cloud)
DB_CONNECTION=mysql
# DB_HOST, DB_PORT, DB_DATABASE, DB_USERNAME, DB_PASSWORD set by Cloud

# Queue & Cache (use database or Redis from Cloud)
QUEUE_CONNECTION=database
CACHE_STORE=database
SESSION_DRIVER=database

# Broadcasting (disable WebSockets for now - add Reverb later if needed)
BROADCAST_CONNECTION=log

# Mail (configure SMTP or use Laravel Cloud mail)
MAIL_MAILER=log

# Other required settings
LOG_CHANNEL=stack
LOG_LEVEL=error

FILESYSTEM_DISK=local
